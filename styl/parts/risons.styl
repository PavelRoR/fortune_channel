#risons
    background-image url(../img/second_screen_back.jpg)
    background-repeat no-repeat
    background-position: center top
    background-size: cover
#risons_slider
    .crsl-item
        padding-top: 45px
        .item
            border: 1px solid #555555
            border-radius: 5px;
            background-color: rgba(255, 255, 255, 0.051);
            width: 100%
            height: 308px;
            text-align: center
            padding: 0 10px 10px
            margin-bottom: 35px
            img
                margin: -55px auto 10px
            h5
                font-size: 20px;
                font-family: "OswaldRegular", Arial;
                color: #88d6e7
                line-height: 1.3; 
                margin-bottom: 20px
            p
                font-size: 16px;
                font-family: "OpenSansRegular", arial;
                color: rgba(255, 255, 255, 0.6);
                line-height: 1.375;
.slidernav
    width: 162px
    margin: 0 auto
    a
        vertical-align: middle
        text-align: center;
        font-size: 32px;
        border-radius: 50%;
        background-color: #288ba0
        box-shadow: 2.5px 4px 18px 0.72px rgba(0, 0, 0, 0.5);
        color: #ffffff
        width: 51px
        height: 51px
        margin: 0 15px
        &:first-child
            float left
        &:last-child
            float: right