#course_plan
    background-image url(../img/plan_bg.jpg)
    background-position: bottom center
    background-size: cover
    background-repeat no-repeat
    width: 100%
    padding-bottom: 100px
    h3
        position relative
        color: #fffefe
        background-color h3_brown
        width 100%
        padding: 42px 0
        margin-bottom: 80px
        &:before
        &:after
            content: ''
            width: 100%
            height: 1px
            background-color: lines
            position: absolute
            left: 0
            right 0
        &:before
            top: 10px
        &:after
            bottom: 10px
.plan_list#tabs
    width: 1000px
    margin:  0 auto
    ul.base_links
        display: table
        width: 100%
        height: 50px
        margin-bottom: 40px
        li
            list-style: none
            display: table-cell
            vertical-align: middle
            text-align: center
            width: 25%
            a
                background-color: #d85007
                border-radius: 5px
                color #fff
                width: 200px
                margin: 0 auto
                display: block;
                padding: 10px;
                font-size: 22px;
                font-family: 'RobotoRegular',  sans-serif;
                transition: all .4s ease
            &.ui-tabs-active.ui-state-active
                a
                    background-color: #B04106
                    box-shadow: 0 0 5px rgba(#d85007, .7)
                    transition: all .4s ease
                    font-family: 'RobotoBold',  sans-serif;
.wrapper_main
    border: 1px solid currentcolor;
    border-radius: 5px;
    width: 100%
    min-height: 450px;
    padding: 25px;
    margin-bottom 60px;
    background-color: #fff;
    -webkit-box-shadow: 0 3px 15px 0 rgba(0,0,0,0.24);
    box-shadow: 0 3px 15px 0 rgba(0,0,0,0.24);
    clear: both;
    animation fd
    animation-duration .4s
    h4
        font-size: 27px;
        font-family: 'RobotoBoldCondensed', sans-serif;
        line-height: 1;
        position: relative;
        small
            font-family: 'RobotoItalic', sans-serif;
            font-size: 20px;
            line-height: 33px;
            display: block;
            font-weight: 100;
    h5
        font-size: 24px;
        font-family: 'RobotoBoldCondensed', sans-serif;
        line-height: 1;
        position: relative;
        margin: 10px 0
    ul
        margin: 20px 0
        li
            list-style none
            float left
            padding: 5px 10px
            text-align: center
        &.lessons_links
            li
                a
                    background-color: #edc22b
                    border-radius: 5px
                    color #fff
                    width: 85px
                    margin: 0 auto
                    display: block;
                    padding: 10px 0;
                    font-size: 18px;
                    font-family: 'RobotoRegular',  sans-serif;
                    transition: all .4s ease
                &.ui-tabs-active.ui-state-active
                    a
                        background-color: #AC8D1F
                        box-shadow: 0 0 5px rgba(#edc22b, .7)
                        transition: all .4s ease
                        font-family: 'RobotoBold',  sans-serif;
    p
        padding: 10px 0;
        font-size: 18px;
        font-family: 'RobotoRegular',  sans-serif;
    &:nth-of-type(1)
        border-color: #567754
        h4
        h5
        .lessons li
            color #567754
    &:nth-of-type(2)
        border-color: #a63c08
        h4
        h5
        .lessons li
            color #a63c08
    &:nth-of-type(3)
        border-color: #d78f01
        h4
        h5
        .lessons li
            color #d78f01
    &:nth-of-type(4)
        border-color: #364453
        h4
        h5
        .lessons li
            color #364453



.lessons
    margin-left: 40px
    li
        font-size: 18px;
        font-family: 'RobotoRegular', sans-serif;
        margin-bottom: 5px;
        line-height: 1.1;
        span
            color #260002










@keyframes fd
    0%
        transform: translateY(5px)
        opacity: 0
    100%
        transform: translateY(0)
        opacity: 1