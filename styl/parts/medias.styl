    .plan_wrapper:nth-of-type(3) .day_number
    .plan_wrapper:nth-of-type(4) .day_number
    .plan_wrapper:nth-of-type(5) .day_number
        top -142px
        left 0
        right 0
        margin: 0 auto
    .plan_wrapper:first-of-type
        margin-top: 100px
    .plan_wrapper:first-of-type .plan_caption
    .plan_wrapper:nth-of-type(3) .plan_caption
    .plan_wrapper:nth-of-type(5) .plan_caption
        padding-left: 0
    .plan_wrapper .plan_bonus
        position: static
    .plan_caption h4
        text-align: center
    .plan_caption ul
        margin 15px 0 15px 50px
    .veda_wrap
        background-position-x: right
    #licenses .col-md-3
        height: auto;
        display: block;
        width: 35%;
        margin: 0 auto 20px;
    #licenses .col-md-3 a
        display block