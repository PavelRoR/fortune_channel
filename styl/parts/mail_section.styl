#mail_section
    background-color #20242e
    width 100%
    padding: 25px 0
    overflow: hidden
    .col-md-3
        height: 50px
        display: flex
        align-items: center
        justify-content: center
        h3
            font-size: 27px;
            font-family: "OswaldMedium",arial;
            color: #fff
            line-height: 1.148;
            text-align: left;
            &:after
                content: none
        p
            font-size: 22px;
            font-family: "OpenSansRegular", arial;
            color: #fff
            line-height: 1.35;
        .infront_submit,
        .span_phone
            font-size: 15px
.email-block input,
.phone-block input
    border: 1px solid #7b7b7b
    border-radius: 5px;
    background-color: #fff
    box-shadow: inset 0px 0px 8.55px 0.45px rgba(0, 0, 0, 0.39);
    width 100%
    height: 48px
    padding: 7px 15px
    font-size: 18px;
    font-family: "OpenSansRegular", arial
    color: rgba(#1d1c18, 0.702);
    line-height: 1.3
    text-align: left;
.button
    display: block
    border: 1px solid rgb(30, 73, 29)
    border-radius: 5px;
    background-image: linear-gradient(#35c2db, #1c5768)
    width 100%
    height: 50px;
    font-size: 24px;
    font-family: "OswaldMedium", Arial;
    color: rgb(255, 255, 255);
    line-height: 1.375;
    padding-top: 0
    text-align: center;
    box-shadow: 0px 0px 3px #ffffbe inset
    transition: all .4s ease
    &:hover
        background-image: linear-gradient(to top,#35c2db, #1c5768)
        transition: all .4s ease
        