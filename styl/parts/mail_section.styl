#mail_section
    background-color h3_brown
    width 100%
    padding: 30px 0
    overflow: hidden
    position relative
    &:before
    &:after
        content: ''
        width: 100%
        height: 1px
        background-color: lines
        position: absolute
        left: 0
        right 0
    &:before
        top: 10px
    &:after
        bottom: 10px
    .col-md-3
        height: 50px
        display: flex
        align-items: center
        justify-content: center
        h3
            font-size: 27px;
            font-family: 'RobotoBoldCondensed', sans-serif
            color: pr_yellow
            line-height: 1.148;
            text-align: left;
        p
            font-size: 23px;
            font-family: 'RobotoRegular', sans-serif
            color: #fff
            line-height: 1.35;
        .infront_submit,
        .span_phone
            font-size: 15px
.email-block input,
